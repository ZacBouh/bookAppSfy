  <img src="{{ asset((copy.image ?? '')|defaultImage)}}" class="card-img-top" alt="...">
  <div class="card-body overflow-hidden" >
    <h5 class="card-title">{{copy.book.title}}</h5>
    <p class="card-text " >{{copy.description}}</p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">{{copy.book.writer[0]}}</li>
    <li class="list-group-item">{{copy.buyingPrice}} â‚¬</li>
    <li class="list-group-item">{{copy.copyCondition}}</li>
  </ul>
  <div class="card-body overflow-hidden">
    <a href="{{ path('app_copy_edit', {id: copy.id}) }}" class="card-link">Edit</a>
    <a href="{{ path('app_copy_delete', {id: copy.id}) }}" class="card-link">Delete</a>
    <a href="{{ path('app_copy_details', {id: copy.id}) }}" class="card-link">More</a>
  </div>
