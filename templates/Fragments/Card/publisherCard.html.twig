{% set publisher = item %}
<div class="card " style="width: 18rem; max-height: 500px;">
  <img src="{{ asset((author.image ?? '')|defaultImage)}}" class="card-img-top" alt="...">
  <div class="card-body overflow-hidden" >
    <h5 class="card-title">{{publisher.name}}<h5>
    <p class="card-text " >{{publisher.description}}</p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">{{publisher.nationality}}</li>
    <li class="list-group-item">{{publisher.foundingDate|date('Y')}}</li>
  </ul>
  <div class="card-body overflow-hidden">
  {% if is_granted('ROLE_ADMIN')  %}
    
    <a href="{{ path('app_publisher_edit', {id: publisher.id}) }}" class="card-link">Edit</a>
    <a href="{{ path('app_publisher_delete', {id: publisher.id}) }}" class="card-link">Delete</a>
  {% endif %}
    <a href="{{ path('app_publisher_details', {id: publisher.id}) }}" class="card-link">More</a>
  </div>
</div>