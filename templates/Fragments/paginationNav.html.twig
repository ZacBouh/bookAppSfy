<nav aria-label="Page navigation example">
  <ul class="pagination">
    {% if currentPage - 1 >= 1 %}
        
    <li class="page-item"><a class="page-link" href="{{ path('app_book', {'page': currentPage - 1, 'booksPerPage': booksPerPage}) }}">Previous</a></li>
    {% endif %}
    {% for i in range(1, totalPages) %}
     {% if i == currentPage %}
        <li class="page-item active" aria-current="page">
      {% else %}
        <li class="page-item">
     {% endif %}
        <a class="page-link" href="{{ path('app_book', {'page': i, 'booksPerPage': booksPerPage}) }}">{{i}}</a></li>
    {% endfor %}

    {% if currentPage + 1 <= totalPages %}
        
    <li class="page-item"><a class="page-link" href="{{ path('app_book', {'page': currentPage + 1, 'booksPerPage': booksPerPage}) }}">Next</a></li>
    {% endif %}
  </ul>
</nav>